@model MyService
@{
    string adminPanel = "Редактировать запись";
    ViewBag.Title = adminPanel;
}

<script src="~/js/ckeditor/ckeditor.js"></script>

<div>
    <h2>@adminPanel</h2>
    <div>
        <form asp-area="Admin" asp-controller="ServiceAdd" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateAdded" />
            <input type="hidden" asp-for="Image" />

            <div asp-validation-summary="All"></div>
            <div class="box">
                <label asp-for="Title"></label>
                <input asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>
            <div class="box">
                <label asp-for="Subtitle"></label>
                <input asp-for="Subtitle" />
                <span asp-validation-for="Subtitle"></span>
            </div>
            <div class="box">
                <label asp-for="MyText"></label>
                <textarea asp-for="MyText"></textarea>
                <span asp-validation-for="MyText"></span>
            </div>
            <div class="box">
                <label asp-for="Image"></label>
                <input type="file" name="Image" id="Image" />
                <div>
                    <img class="img-block" src="~/images/@Model.Image" />
                </div>
            </div>
            <div class="box">
                <label asp-for="MetaTitle"></label>
                <input asp-for="MetaTitle" />
                <span asp-validation-for="MetaTitle"></span>
            </div>
            <div class="box">
                <label asp-for="MetaDiscription"></label>
                <input asp-for="MetaDiscription" />
                <span asp-validation-for="MetaDiscription"></span>
            </div>
            <div class="box">
                <label asp-for="MetaKeyword"></label>
                <input asp-for="MetaKeyword" />
                <span asp-validation-for="MetaKeyword"></span>
            </div>
            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>



<script>
    window.onload = function() {
        var newCKEdit = CKEDITOR.replace('@Html.IdFor(x=>x.MyText)');
        newCKEdit.updateElement();
    }
</script>